{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "include-v-in-tag": true,
  "bump-minor-pre-major": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {"type": "generic", "path": "Cargo.toml"},
        {"type": "generic", "path": "pixi.toml"},
        {"type": "json", "path": "dashboard/package.json", "jsonpath": "$.version"},
        {"type": "json", "path": "bubbaloop-tui/package.json", "jsonpath": "$.version"}
      ]
    }
  }
}
